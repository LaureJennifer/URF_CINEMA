@using BaseSolution.BlazorServer.Components.Login
@using BaseSolution.BlazorServer.Pages.Film
@using BaseSolution.Infrastructure.Extensions
@using MudBlazor
@using BlazorServer.Data.Extensions;

@inherits LayoutComponentBase
@inject IDialogService DialogService
@inject NavigationManager _navigationManager;
@inject EntityStatusExtensions _entityStatusExtensions
@inject SaveCustomerId _saveCustomerId
<style>
    body {
        background-color: #100645;
    }

    .mud-table-container {
        color: #F2FFFF;
    }

    .mud-table-sticky-header * .mud-table-root .mud-table-head * .mud-table-cell {
        background-color: #2b2c4b;
        color: #F2FFFF;
    }

    .mud-table-root .mud-table-body .mud-table-cell {
        background-color: #2b2c4b;
        color: #F2FFFF;
    }

    .mud-appbar .mud-toolbar-appbar {
        background-color: #2b2c4b;
    }

    .mud-table-pagination-toolbar {
        background-color: #2b2c4b;
        color: #F2FFFF;
    }

    .mud-drawer .mud-drawer-content {
        background-color: #2b2c4b;
        color: #F2FFFF;
    }

    .mud-table-pagination-select .mud-input .mud-input-root {
        color: #F2FFFF;
        border-radius: 10px;
    }

    .mud-icon-button:disabled {
        color: #F2FFFF;
    }

    .mud-paper {
        background-color: #2b2c4b;
        color: #F2FFFF;
        border-radius: 10px;
    }

    .mud-table-root .mud-table-head .mud-table-cell {
        background-color: #2b2c4b;
        color: #F2FFFF;
    }

    .mud-input > input.mud-input-root {
        color: #fff;
    }

    .mud-table-cell {
        border-bottom: 1px solid #71729d;
    }

    .mud-button-root:disabled {
        color: #f2ffff !important;
    }

    .mud-icon-default {
        color: #f2ffff !important;
    }

    .mud-dialog {
        background-color: #2b2c4b;
        color: #F2FFFF;
    }

    .mud-input {
        color: #F2FFFF;
    }

    .mud-button {
        color: #f55f4e;
    }

    .mud-table-background-custom {
        background-color: #2b2c4b;
        .mud-table-cell-custom-group

    {
        font-weight: 500;
    }

    .mud-icon-root.mud-svg-icon {
        fill: #F2FFFF;
    }
</style>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudGrid>
            <MudItem xs="9" md="9" lg="9">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            </MudItem>
            <MudItem xs="3" lg="3" md="3">
                <AuthorizeView>
                    <Authorized>
                        <MudItem xs="12" md="12" lg="12">
                            <MudText></MudText>
                            <MudButton Class="mt-4" @onclick="OpenDialog" Variant="Variant.Filled" Color="Color.Error">Đăng xuất</MudButton>
                        </MudItem>
                    </Authorized>
                    <NotAuthorized>
                    </NotAuthorized>
                </AuthorizeView>
            </MudItem>
        </MudGrid>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6" Style="color:#F45D56">URF Cinema</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-2 pt-8">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {

    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    private void OpenDialog()
    {
        _navigationManager.NavigateTo("/logout");
    }
}


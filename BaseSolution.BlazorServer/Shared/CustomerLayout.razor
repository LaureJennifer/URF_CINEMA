@using BaseSolution.BlazorServer.Components.Login
@using BaseSolution.BlazorServer.Pages.Film
﻿@using BlazorServer.Data.Extensions;
@inherits LayoutComponentBase
@inject IDialogService DialogService
<MudThemeProvider/>
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar Style="background-color:#261D30">
        <MudText Color="Color.Success" Typo="Typo.h6">URF CENIMAS</MudText>
        <MudSpacer />
        <MudLink Href="" Typo="Typo.h6">Phim</MudLink>
        <MudSpacer />
        <MudLink Href="/FilmSchedule" Typo="Typo.h6">Lịch chiếu</MudLink>
        <MudSpacer />
        <MudSelect Dense="true" T="string" Label="Rạp URF" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter" AdornmentColor="Color.Success" Style="background-color:#EEEEEE; border-radius:8px;">
            <MudSelectItem Value="@("URF Cầu Giấy")" />
            <MudSelectItem Value="@("URF Thanh Xuân")" />
            <MudSelectItem Value="@("URF Hoàng Mai")" />
        </MudSelect>
        <MudSpacer />
        <MudIconButton @onclick="OpenDialog" Variant="Variant.Filled" Icon="@Icons.Material.Filled.PersonPin" Color="Color.Info"></MudIconButton>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
    <Footer/>
    <MudScrollToTop>
        <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.KeyboardArrowUp" />
    </MudScrollToTop>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    public string Search { get; set; }
    private void OpenDialog()
    {
        DialogOptions closeOnEscapeKey = new DialogOptions() { CloseOnEscapeKey = true };

        DialogService.Show<Login>("Đăng nhập", closeOnEscapeKey);
    }
}


@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations
@inject IDialogService DialogService

<MudDialog>
    <DialogContent>

                <MudForm>      
                            <MudTextField T="string" Label="Mã Phòng"/>
                            <MudTextField T="string" Label="Sức Chứa"/>
                            <MudTextField T="string" Label="Âm thanh"/>
                             <MudTextField T="string" Label="Kích Thước màn hình"/> 
                             <MudGrid>
                                   <MudItem xs="7">
                                 </MudItem>
                          <MudItem xs="5">
                            <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="mt-3">Thêm </MudButton> 
                            </MudItem>
                               </MudGrid>
                    </MudForm> 

   </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
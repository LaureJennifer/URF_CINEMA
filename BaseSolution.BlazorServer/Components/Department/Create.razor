@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations
@inject IDialogService DialogService
<MudDialog  Style="width:1000px" >
    <DialogContent >
         <MudForm>      
                            <MudTextField T="string" Label="Mã Rạp"/>
                            <MudTextField T="string" Label="Tên Rạp"/>
                            <MudTextField T="string" Label="Địa chỉ"/>
                             <MudTextField T="string" Label="Số điện thoại"/> 
                             <MudTextField T="string" Label="Email"/> 
                              <MudTextField T="string" Label="Loại Rạp"/> 
                    </MudForm> 
                  
         </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Quay Lại</MudButton>
        <MudButton Color="Color.Success" OnClick="Submit">Thêm mới</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}

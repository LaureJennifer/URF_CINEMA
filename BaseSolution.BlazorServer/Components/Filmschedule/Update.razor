@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations
@inject IDialogService DialogService
<MudDialog Style="width: 1000px">
    <DialogContent>
                       <MudForm>      
                      <MudTextField T="string" Label="Tên phim"/>
                      <MudDatePicker Label="Ngày chiếu" /> 
                      <MudTextField T="string" Label="Thời gian chiếu"/>
                    </MudForm>   
   </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Quay Lại</MudButton>
        <MudButton Color="Color.Warning" OnClick="Submit">Sửa Thông Tin</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
